<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20pt"
    android:gravity="center"
    tools:context=".LoginActivityImpl"
    android:id="@+id/constraintLayout">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@id/scanButton"
        app:layout_constraintEnd_toEndOf="@id/constraintLayout"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
        app:layout_constraintTop_toTopOf="@id/constraintLayout"
        app:layout_constraintVertical_bias="0.503"
        android:contentDescription="@string/radar_cns_logo"
        app:layout_constraintVertical_chainStyle="spread"/>

    <Button
        android:id="@+id/scanButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="scan"
        android:text="@string/scan_qr_button"
        app:layout_constraintBottom_toTopOf="@id/enterCredentialsButton"
        app:layout_constraintEnd_toEndOf="@id/constraintLayout"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@id/splash_image"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/enterCredentialsButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="enterCredentials"
        android:text="@string/enter_credentials"
        app:layout_constraintBottom_toTopOf="@id/messageText"
        app:layout_constraintEnd_toEndOf="@id/constraintLayout"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@id/scanButton"
        app:layout_constraintVertical_chainStyle="spread"/>

    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@id/enterCredentialsButton" />

    <TextView
        android:id="@+id/loginPrivacyPolicyUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_policy"
        android:textColor="#57a0d4"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
        app:layout_constraintBottom_toBottomOf="@id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
