    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.radarbase.passive.app.MainActivityImpl">
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content">

            <TableLayout
                android:id="@+id/deviceTable"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*" >

                <!--<TableRow-->
                    <!--android:id="@+id/headerRow"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="match_parent" >-->

                    <!--<TextView-->
                        <!--style="@style/Header"-->
                        <!--android:text="" />-->

                    <!--<ImageView-->
                        <!--android:src="@drawable/ic_watch"/>-->

                    <!--<TextView-->
                        <!--style="@style/Header"-->
                        <!--android:text="@string/header_device_status" />-->

                    <!--<TextView-->
                        <!--style="@style/Header"-->
                        <!--android:text="@string/header_battery" />-->

                    <!--&lt;!&ndash;<ImageView&ndash;&gt;-->
                        <!--&lt;!&ndash;android:src="@drawable/ic_thermometer"/>&ndash;&gt;-->

                    <!--&lt;!&ndash;<ImageView&ndash;&gt;-->
